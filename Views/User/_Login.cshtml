


@model LogUser
<br>
        <div class="text-center border col-md-5 offset-2 h-50 shadow p-3 mb-5 bg-white rounded">
            <h1 class="display-4">Login</h1>
            <div>
            <form  asp-controller="user" asp-action="Login" class="p-2" method="post" >  

                <div class="form-group row  p-2">
                    <label asp-for="LEmail" class="col-sm-3 col-form-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="LEmail" class="form-control" placeholder="Email">
                            <span asp-validation-for="LEmail" class="text-danger"></span>
                        </div>
                </div>

                <div class="form-group row p-2">
                    <label asp-for="LPassword" class="col-sm-3 col-form-label"></label>
                        <div class="col-sm-8">
                            <input type="password" asp-for="LPassword" class="form-control" placeholder="Password">
                            <span asp-validation-for="LPassword" class="text-danger"></span>
                        </div>
                </div>

                    <button type="submit" class="btn btn-primary m-4">Login</button>
            </form>
        </div></div>